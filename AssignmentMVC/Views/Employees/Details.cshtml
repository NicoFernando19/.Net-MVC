@model AssignmentMVC.Data.Entities.Employee
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-12">
        <div class="col d-flex justify-content-center">
            <div class="w-75 d-flex justify-content-center">
                <img src="@Configuration.GetSection("WebSettings")["FolderImageUrl"]/@Model.ImageName" class="w-50 img-circle elevation-3" id="image" alt="">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.Name)</label>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.Address)</label>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.PhoneNumber)</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Gender" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.Gender)</label>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.Email)</label>
                </div>
                <div class="form-group">
                    <label asp-for="DoB" class="control-label font-weight-bold"></label>
                </div>
                <div class="form-group">
                    <label class="control-label">@Html.DisplayFor(model => model.DoB)</label>
                </div>
            </div>
            <div class="col-md-6 pl-5 form-check">
                <label class="form-check-label">
                    <b>Status</b> @(Model.IsActive ? "Active" : "Not Active")
                </label>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
