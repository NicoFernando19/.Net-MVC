@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="body-sign">
    <div class="center-sign">

        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Reset Password</h2>
            </div>
            <div class="panel-body">
                <form asp-controller="User" asp-action="EditPassword" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Email" value="@(Context.Request.Query["email"])" />
                    <input type="hidden" asp-for="Token" value="@(Context.Request.Query["token"])" />
                    <div class="form-group mb-none">
                        <div class="row">
                            <div class="col-sm-12 mb-lg">
                                <label>Password</label>
                                <input asp-for="Password" type="password" class="form-control input-lg" />
                            </div>
                            <div class="col-sm-12 mb-lg">
                                <label>Password Confirmation</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control input-lg" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary hidden-xs">Reset Password</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Reset Password</button>
                        </div>
                    </div>
                    
                    <p class="text-center">Already have an account? <a asp-controller="User" asp-action="Login">Sign In!</a>

                </form>
            </div>
        </div>
    </div>
</section>