@model RegistrationForm
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="body-sign">
    <div class="center-sign">

        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign Up</h2>
            </div>
            <div class="panel-body">
                <form asp-controller="User" asp-action="RegisterPost">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-lg">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control input-lg" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-lg">
                        <label>E-mail Address</label>
                        <input asp-for="Email" type="email" class="form-control input-lg" />
                    </div>

                    <div class="form-group mb-none">
                        <div class="row">
                            <div class="col-sm-6 mb-lg">
                                <label>Password</label>
                                <input asp-for="Password" type="password" class="form-control input-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 mb-lg">
                                <label>Password Confirmation</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control input-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4 text-right">
                            <button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>
                            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>
                        </div>
                    </div>

                    <p class="text-center">Already have an account? <a asp-controller="User" asp-action="Login">Sign In!</a>

                </form>
            </div>
        </div>
    </div>
</section>
