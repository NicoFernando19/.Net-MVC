@model ValidateEmail
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<section class="body-sign">
    <div class="center-sign">
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Recover Password</h2>
            </div>
            <div class="panel-body">
                <div class="alert @(ViewBag.SentMail == null ? "alert-info" : "alert-success")">
                    <p class="m-none text-semibold h6">@(ViewBag.SentMail == null ? "Enter your e-mail below and we will send you reset instructions!" : ViewBag.SentMail  )</p>
                </div>

                <form asp-controller="User" asp-action="SendResetPaswordLink">
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-none">
                        <div class="input-group">
                            <input asp-for="Email" type="email" placeholder="E-mail" class="form-control input-lg" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-lg" type="submit">Reset!</button>
                            </span>
                        </div>
                    </div>

                    <p class="text-center mt-lg">Remembered? <a asp-controller="User" asp-action="Login">Sign In!</a>
                </form>
            </div>
        </div>
    </div>
</section>